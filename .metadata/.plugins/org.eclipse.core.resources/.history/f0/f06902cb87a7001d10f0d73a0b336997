<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Ajax로 요청하기</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script type="text/javascript">
	function methodA() {
		alert("methodA 호출");
		let pic = 2;
		$.ajax ({
		    method: "GET"
		    , url: "pictureDetail.html?id=" + pic + "&timestamp=" + new Date().getTime()
		    , dataType: "html"
		    , success: function(result) {
		        $("#d_pic").css("left", $(td).offset().left + 50 + "px");
		        $("#d_pic").css("top", $(td).offset().top + "px");
		        $("#d_pic").html(result)
		    }
		})
	}
</script>
</head>
<body onLoad="methodA()">

</body>
</html>